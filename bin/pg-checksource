#!/usr/bin/perl

use strict;
use warnings;
use feature 'say';

use File::HomeDir;
use File::Spec;
use Getopt::Long;
use Pg::Checksource;

my $config_file;

my $result = GetOptions("config=s" => \$config_file);
unless ($result) {
    say "Usage: pg-checksource [-c|--config <path>] FILES";
    exit 1;
}

my $app = Pg::Checksource->new({config => $config_file});
$app->run(@ARGV);